<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UndoBar" parent="@style/UndoBarClassic">
        <item name="android:background">@drawable/toast_frame_holo</item>
        <item name="android:padding">0.0dip</item>
    </style>
    <style name="UndoBarButton" parent="@style/UndoBarButtonClassic">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/toast_frame_holo_button</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="UndoBarMessage" parent="@style/UndoBarMessageClassic">
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginLeft">25.0dip</item>
        <item name="android:shadowColor">#bb000000</item>
        <item name="android:shadowRadius">2.75</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="Theme.App" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:icon">@drawable/actionbar_logo</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/VextilOverflowButtonStyle</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
        <item name="icon">@drawable/actionbar_logo</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBarStyle</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
        <item name="actionOverflowButtonStyle">@style/VextilOverflowButtonStyle</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarSize">56dp</item>
        <item name="android:actionBarSize">56dp</item> 
        <item name="homeAsUpIndicator">@drawable/vextil_home_as_up_legacy</item>
        <item name="android:homeAsUpIndicator">@drawable/vextil_home_as_up_legacy</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/primary_dark</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="Theme.App.Gray" parent="@style/Theme.App">
        <item name="android:windowBackground">@color/primary_dark</item>
    </style>
    <style name="Theme.App.CondensedActionBar" parent="@style/Theme.App">
        <item name="android:fitsSystemWindows">false</item>
    </style>
     <style name="Theme.Prefs" parent="@style/Theme.App">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>
